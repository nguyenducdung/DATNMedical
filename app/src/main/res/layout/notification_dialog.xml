<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/bg_dialog_border"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvTitle"
            style="@style/commonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            tools:text="demo title" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/tvContent"
            style="@style/commonTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_layout_padding"
            android:layout_marginBottom="@dimen/common_layout_padding"
            android:gravity="center"
            android:minHeight="50dp"
            tools:text="demo title" />

        <Button
            android:textSize="12sp"
            android:id="@+id/btnPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button_border"
            tools:text="primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textSize="12sp"
                android:textAllCaps="false"
                android:id="@+id/btnNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_border"
                style="?android:attr/buttonBarButtonStyle"
                tools:text="osdgdfgdfg" />

            <Button
                android:textAllCaps="false"
                android:textSize="12sp"
                android:id="@+id/btnPositive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_border"
                style="?android:attr/buttonBarButtonStyle"
                tools:text="ok" />
        </LinearLayout>

    </LinearLayout>


</layout>
